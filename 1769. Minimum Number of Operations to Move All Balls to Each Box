class Solution {
    public int[] minOperations(String boxes) {
        
        int n = boxes.length();
        int[] moves = new int[n]; 
        int[] balls = new int[n]; 
        //find distance from ith box from all other boxes * number of balls per box
        
        for (int i = 0; i < n; i++) {
            balls[i] = i * (boxes.charAt(i) - '0'); 
        }
        
        for (int j = 0; j < n; j++) {
            for (int k = 0; k < n; k++) {
                if (k != j && boxes.charAt(k) == '1') {
                    moves[j] += Math.abs(j - balls[k]);
                }
            }
        }
        return moves;
    }
}
