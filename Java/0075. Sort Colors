class Solution {
    public void sortColors(int[] nums) {
        if (nums.length != 1) {
            int high = nums.length-1, low = 0, count = 0;

            while (count <= high) {
                if (nums[count] == 0) {
                    int temp = nums[low];
                    nums[low] = 0;
                    nums[count] = temp;
                    low++;
                    count++;
                } else if (nums[count] ==  2) {
                    int temp = nums[high];
                    nums[high] = 2;
                    nums[count] = temp;
                    high--;
                } else {
                    count++;
                }
            }
        }
    }
}
